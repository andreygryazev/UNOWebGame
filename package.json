{
  "type": "module",
  "name": "uno-web-game",
  "version": "2.0.0",
  "description": "UNO Web Game - Real-Time Multiplayer Card Game",
  "main": "server/index.ts",
  "scripts": {
    "dev": "concurrently \"vite\" \"nodemon --watch server --exec node --loader ts-node/esm server/index.ts\"",
    "dev:host": "concurrently \"vite --host\" \"nodemon --watch server --exec node --loader ts-node/esm server/index.ts\"",
    "build": "vite build",
    "start": "npm run build && node --loader ts-node/esm server/index.ts",
    "server": "nodemon --watch server --exec node --loader ts-node/esm server/index.ts"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "concurrently": "^8.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "framer-motion": "^12.23.24",
    "howler": "^2.2.4",
    "jsonwebtoken": "^9.0.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.2.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "nodemon": "^3.1.11",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vite": "^7.2.4"
  }
}
